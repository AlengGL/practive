        "/api/user": {
            "get": {
                "tags": ["Option"],
                "summary": "Get all users",
                "description": "Retrieve a list of all users",
                "security": [
                    {
                        "token": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of users",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "username": {
                                                "type": "string"
                                            }
                                        }
                                    }
